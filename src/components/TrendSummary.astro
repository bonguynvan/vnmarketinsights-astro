---
interface InsightSummary {
  title: string;
  summary: string;
  keyPoints: string[];
}

interface Props {
  insight: InsightSummary;
  topCategory: string;
  avgScore: number;
  avgGrowth: number;
}

const { insight, topCategory, avgScore, avgGrowth } = Astro.props;
---

<div class="bg-gradient-to-br from-indigo-50 to-blue-50 rounded-2xl p-6 md:p-8 border border-indigo-100 shadow-sm">
  <div class="flex items-start gap-4">
    <div class="flex-shrink-0">
      <div class="bg-indigo-600 rounded-xl p-3">
        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
        </svg>
      </div>
    </div>
    <div class="flex-1">
      <h3 class="text-xl font-bold text-gray-900 mb-2">
        {insight.title}
      </h3>
      <p class="text-gray-700 mb-6 leading-relaxed">
        {insight.summary}
      </p>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
        <div class="bg-white rounded-lg p-4 border border-gray-200">
          <div class="text-sm text-gray-500 mb-1">Top Category</div>
          <div class="text-lg font-semibold text-gray-900">{topCategory}</div>
        </div>
        <div class="bg-white rounded-lg p-4 border border-gray-200">
          <div class="text-sm text-gray-500 mb-1">Avg Trend Score</div>
          <div class="text-lg font-semibold text-gray-900">{avgScore.toFixed(1)}/100</div>
        </div>
        <div class="bg-white rounded-lg p-4 border border-gray-200">
          <div class="text-sm text-gray-500 mb-1">Avg Growth</div>
          <div class="text-lg font-semibold text-gray-900">{avgGrowth.toFixed(1)}%</div>
        </div>
      </div>

      <h4 class="text-sm font-semibold text-gray-900 uppercase tracking-wider mb-3">
        Key Insights
      </h4>
      <ul class="space-y-2">
        {insight.keyPoints.map((point, index) => (
          <li key={index} class="flex items-start gap-2 text-gray-700">
            <svg class="w-5 h-5 text-emerald-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span>{point}</span>
          </li>
        ))}
      </ul>
    </div>
  </div>
</div>
