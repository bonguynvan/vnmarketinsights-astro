---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="404 - Page Not Found" description="The page you are looking for does not exist.">
  <div class="not-found">
    <div class="not-found__content">
      <h1 class="not-found__title">404</h1>
      <p class="not-found__text">Page not found</p>
      <p class="not-found__desc">The page you are looking for doesn't exist or has been moved.</p>
      <a href="/" class="not-found__link">← Back to Home</a>
      <span class="not-found__sep"> · </span>
      <a href="/tools" class="not-found__link not-found__link--secondary">Tools</a>
    </div>
  </div>
</BaseLayout>

<style>
  .not-found {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 60vh;
    text-align: center;
  }

  .not-found__title {
    font-size: 6rem;
    font-weight: 700;
    line-height: 1;
    margin-bottom: var(--space-4);
    color: var(--color-text-light);
  }

  .not-found__text {
    font-size: var(--text-2xl);
    font-weight: 600;
    margin-bottom: var(--space-2);
  }

  .not-found__desc {
    color: var(--color-text-muted);
    margin-bottom: var(--space-8);
  }

  .not-found__link {
    display: inline-block;
    padding: var(--space-3) var(--space-6);
    background: var(--color-text);
    color: var(--color-bg);
    border-radius: 8px;
    text-decoration: none;
    font-weight: 500;
    transition: opacity 0.2s ease;
  }

  .not-found__link:hover {
    opacity: 0.9;
  }

  .not-found__sep {
    color: var(--color-text-muted);
    margin: 0 var(--space-2);
  }

  .not-found__link--secondary {
    background: transparent;
    color: var(--color-accent);
    border: 1px solid var(--color-accent);
  }
</style>
